extends layout

block content
    .w3-card-4  
        header.w3-container.w3-teal
            h1=plantas[0]["Espécie"]
            h2=plantas[0]["Nome Científico"]
        .w3-container 
            
            table.w3-table-all 
                tr
                    th Id 
                    th Freguesia 
                    th Espécie 
                    th Estado
                    th Número de Intervenções
                each p in plantas 
                    tr
                        td
                            a(href="/"+p._id)=p._id
                        td=p.Freguesia
                        td
                            a(href="/especies/"+p.Espécie)=p.Espécie
                        td=p.Estado 
                        td=p["Número de intervenções"]
        .w3-btn.w3-teal.w3-margin-top.w3-margin-bottom.w3-margin-left
            a(href="/") Voltar à página inicial
    .w3-card-4
        footer.w3-container.w3-teal
            h5 Generated by MiguelSenra::EngWeb2023 in #{d} 
